<%=  form_tag(posts_edit_path(post.id), method: :put) do %>
<!--method tells it the action to do , path where sending the data -->
<!-- :put b/c default will go to post -->
    <div class="post-field">
        <%= label_tag("Title: ") %> <br/>
        <%= text_field_tag("title", post.title) %>
    </div>

    <div class="post-field">
        <%= label_tag("Content: ") %> <br/>
        <%= text_area_tag("content", post.content) %>
    </div>

    <%= button_tag("Edit Post!") %>
<% end %>
